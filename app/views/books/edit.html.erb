<% if @book.errors.any? %>
  <%= @book.errors.count %> errors
  <div class = "alert">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-11 col-md-6 mx-auto mt-3">
      <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
      <p>Title</p>
        <%= f.text_field :title, class: 'form-control' %>
      <p>Opinion</p>
        <%= f.text_area :body, class: 'form-control' %>
        <%= f.submit 'Update Book', class: 'btn btn-success mt-1' %>
        <% end %>
  
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>