<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <h1>Books</h1>
  
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    
    <tr>
      <% @books.each do |book| %>
      <td>
        <%= link_to book_path(book.id) do %>
          <% if book.user.profile_image.attached? %>
            <%= image_tag book.user.get_profile_image(100,100) %>
          <% else %>
            <%= image_tag 'no_image',resize_to_limit: [100,100] %>
          <% end %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    
    <% end %>
  </table>