<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>
<% if current_user.profile_image.attached? %>
  <%= image_tag current_user.get_profile_image(100,100) %>
<% else %>
  <%= image_tag 'no_image',resize_to_limit: [100,100] %>
<% end %>

