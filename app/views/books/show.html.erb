<h1>Books detail</h1>
  
  <table>
    <td><%= link_to current_user.name, books_path(current_user) %></td>
    <td>
      <%= link_to book_path(@book.id) do %>
        <%= @book.title %>
      <% end %>
    </td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to 'Destroy', book_path, method: :delete, data: {confirm: "本当に消しますか？"} %>
      <% end %>
    </td>
  </table>
