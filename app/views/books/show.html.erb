<h1>User info</h1>
<% if @users.profile_image.attached? %>
  <%= image_tag @users.get_profile_image(100,100) %>
<% else %>
  <%= image_tag 'no_image',resize_to_limit: [100,100] %>
<% end %>

<table>
  <tr>
    <th>name</th>
    <th><%= current_user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @users.introduction %></th>
  </tr>
</table>

<p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<h1>Books detail</h1>
  <table>
    <td>
      <%= link_to user_path do %>
        <% if @book.user.profile_image.attached? %>
          <%= image_tag @book.user.get_profile_image(100,100) %>
        <% else %>
          <%= image_tag 'no_image',resize_to_limit: [100,100] %>
        <% end %>
        <%= current_user.name %>
      <% end %>
      </td>
    <td>
      <%= link_to book_path(@book.id) do %>
        <%= @book.title %>
      <% end %>
    </td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to 'Edit', edit_book_path(@book.id) %>
        <%= link_to 'Destroy', book_path, method: :delete, data: {confirm: "本当に消しますか？"} %>
      <% end %>
    </td>
  </table>
