<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class= "container">
  <div class="row">
    <div class="col-sm-10 col-md-5 col-lg-5">
      <h1>User info</h1>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.get_profile_image(100,100) %>
        <% else %>
          <%= image_tag 'no_image',resize_to_limit: [100,100] %>
        <% end %>

      <table>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>


      <h1>New book</h1>
        <%= form_with model: @books do |f| %>
      <h4>title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    
    <div class="col-sm-10 col-md-7 col-lg-7">
      <h1>Book detail</h1>
        <table>
          <td>
            <%= link_to user_path do %>
              <% if @book.user.profile_image.attached? %>
                <%= image_tag @book.user.get_profile_image(100,100) %>
              <% else %>
                <%= image_tag 'no_image',resize_to_limit: [100,100] %>
              <% end %>
              <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book.id) %>
              <%= link_to 'Destroy', book_path, method: :delete, data: {confirm: "本当に消しますか？"} %>
            <% end %>
          </td>
        </table>
      </div>
  </div>
</div>
