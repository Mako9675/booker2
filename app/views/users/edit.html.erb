<div class="container">
  <div class="row">
    <div class="col-sm-11 col-md-6 mx-auto mt-3">
      <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        
        <p>Name</p>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>

        <p>Image</p>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

        <p>Introduction</p>
          <%= f.text_field :introduction %>

        <%= f.submit "Update User",class: 'btn btn-success' %>
        <% end %>
    </div>
  </div>
</div>