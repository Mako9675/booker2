<% if @user.errors.any? %>
  <div class = "alert">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-11 col-md-6 mx-auto mt-3">
      <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        
        <p>Name</p>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前",class: 'form-control' %>

        <p>Image</p>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

        <p>Introduction</p>
          <%= f.text_field :introduction ,class: 'form-control'%>
        <%= f.submit "Update User",class: 'btn btn-secondary mt-1' %>
        <% end %>
    </div>
  </div>
</div>