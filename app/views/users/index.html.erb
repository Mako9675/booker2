<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class= "container">
  <div class="row">
    <div class="col-sm-10 col-md-3 col-lg-3 mt-3">
      <%= render 'shered/userinfo' %>
      
      <%= render 'shered/NewBox', book: @book %>
      
    </div>
    <div class="col-sm-10 col-md-8 col-lg-8 offset-md-1">
      <h2>Users</h2>
  
        <table class="table table-hover">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tr>
            <% @user.each do |user| %>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.get_profile_image(80,80) %>
              <% else %>
                <%= image_tag 'no_image',resize_to_limit: [80,80] %>
              <% end %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          <tr>
            <% end %>
        </table>
        <%= paginate @user %>
    </div>
  </div>
</div>