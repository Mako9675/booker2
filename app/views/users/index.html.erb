<h1>User info</h1>
<% if @users.profile_image.attached? %>
  <%= image_tag @users.get_profile_image(100,100) %>
<% else %>
  <%= image_tag 'no_image',resize_to_limit: [100,100] %>
<% end %>

<table>
  <tr>
    <th>name</th>
    <th><%= current_user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @users.introduction %></th>
  </tr>
</table>

<p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <h1>Users</h1>
  
  <table>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
    <tr>
      <% @user.each do |user| %>
      <td>
        <% if user.profile_image.attached? %>
        <%= image_tag user.get_profile_image(100,100) %>
        <% else %>
        <%= image_tag 'no_image',resize_to_limit: [100,100] %>
        <% end %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to "Show", user_path(user.id) %>
      </td>
    <tr>
    <% end %>
  </table>