<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class= "container">
  <div class="row">
    <div class="col-sm-10 col-md-5 col-lg-5">
      <%= render 'shered/userinfo' %>

      <%= render 'shered/NewBox', book: @books %>
    </div>
    <div class="col-sm-10 col-md-7 col-lg-7">
      <h1>Users</h1>
  
        <table>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <% @user.each do |user| %>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.get_profile_image(100,100) %>
              <% else %>
                <%= image_tag 'no_image',resize_to_limit: [100,100] %>
              <% end %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          <tr>
            <% end %>
        </table>
        <%= paginate @user %>
    </div>
  </div>
</div>