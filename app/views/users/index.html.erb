<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <h1>Users</h1>
  
  <table>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
    <tr>
      <% @user.each do |user| %>
      <td>
        <% if user.profile_image.attached? %>
        <%= image_tag user.get_profile_image(100,100) %>
        <% else %>
        <%= image_tag 'no_image',resize_to_limit: [100,100] %>
        <% end %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to "Show", user_path(user.id) %>
      </td>
    <tr>
    <% end %>
  </table>