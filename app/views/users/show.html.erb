<div class= "container">
  <div class="row">
    <div class="col-sm-10 col-md-3 col-lg-3 mt-3">
      <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.get_profile_image(100,100) %>
        <% else %>
          <%= image_tag 'no_image',resize_to_limit: [100,100] %>
        <% end %>

      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class= "my-4">
        <%= link_to edit_user_path do %>
        <button type="button" class="btn btn-outline-secondary btn-block">
          <i class="fas fa-user-cog"></i>
        </button>
        <% end %>
      </div>

      <%= render 'shered/NewBox', book: @book %>
    </div>
    <div class="col-sm-10 col-md-8 col-lg-8 mt-3 mx-auto">
      <h2>Books</h2>
  
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tr>
        <% @books.each do |book| %>
          <td><%= image_tag book.user.get_profile_image(80,80) %></td>
          <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
    
        <% end %>
      </table>
      <%= paginate @books %>
    </div>
  </div>
</div>